#!/bin/bash

prefix=@prefix@
pkgdatadir=${prefix}/share/seafile

export PYTHONPATH=@pythondir@:$PYTHONPATH

if [ $1 == "start" ]; then
    if [ -f /tmp/ccnet-web.pid ]; then
        kill -9 `cat /tmp/ccnet-web.pid`
    fi
    cd ${pkgdatadir}/web
    @PYTHON@ main.py 127.0.0.1:13420 &
    echo $! > /tmp/ccnet-web.pid
elif [ $1 == "stop" ]; then
    kill -9 `cat /tmp/ccnet-web.pid`
    rm -f /tmp/ccnet-web.pid
fi
